= form_for @victim do |f|
  - if @victim.errors.any?
    #error_explanation
      %h2= "#{pluralize(@victim.errors.count, "error")} prohibited this victim from being saved:"
      %ul
        - @victim.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
